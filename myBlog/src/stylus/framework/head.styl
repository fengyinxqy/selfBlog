@import "./_base.styl"
  /*header start */
.blog-head 
  position fixed
  z-index 99999
  width 100%
  display grid
  grid-template-columns 1fr 3fr 2fr 1fr
  grid-template-rows 60px
  padding padding-space/2 calc(100% - 94vw)
  background-color bg-reverse-color
  justify-content space-between
  align-content center
  & a
    color #fff


.blog-head--logo 
  justify-self center
  align-self center
  overflow hidden
  border-radius 50%
  text-align center
  & img 
    display block
    width auto
    height 40px

.blog-head--nav 
  align-self center
  grid-template-columns auto
  text-align center


.blog-nav--list 
  display grid
  grid-template-columns repeat(6, 1fr)
  font-size 16px
 



.blog-head--search 
  justify-self center
  align-self center
  border-radius 6px
  padding 4px
  box-shadow 0 0 2px bg-theme-color


.blog-input--search 
  border 0
  outline 0
  padding 0 6px
  font-size 14px
  background-color transparent
  color #fff


.blog-head--login 
  justify-self center
  align-self center
  font-size 16px
  color #ccc


.blog-head-menu 
  align-self center
  justify-self center
  font-size 40px
  grid-column-start 4

.blog-head--avatar
  position relative
  display flex
  justify-content center
  align-items center
  overflow hidden
  width 40px
  height 40px
  border-radius 50%
  box-shadow 0 0 4px font-theme-color
  &:hover 
    & .blog-head--write
      transform translateX(0) translateY(10px)
      
      
      
.blog-head--write
  position absolute
  transform translateX(-20px)
  transition .5s
  color #fff
/*header end */