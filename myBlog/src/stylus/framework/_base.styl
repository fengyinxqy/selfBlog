/*base start*/
html 
  font-family: Georgia, 'Times New Roman', Times, serif, "Microsoft yahei";
  color: #222;

body 
  background-color bg-theme-color

a 
  color: gray;

a:hover 
  color: gray;
  cursor: pointer;
  text-decoration: none;

a.blog-btn
    padding padding-space
    &:hover
      background-color font-title-color
      color #fff
    &.blog-btn--reverse
      background-color font-title-color
      color #fff
      &:hover
        background-color line-reverse-color
        color #fff


img 
  width: 100%;

ul 
  list-style: none;
  margin: 0;
  padding: 0;

h1 
  margin: 0;

::placeholder 
  color: #ccc;


[class^="ico"]{
  font-size 20px
}

.blog-line 
  position relative
  &::after
    position absolute
    margin auto
    content ''
    width 1px 
    height 80%
    background-color line-theme-color
.blog-line--col
   &::after
    right 0
    top 0
    bottom 0
    width 1px
    height 80% 
    transform scaleX(.5) 
.blog-line--row
  &::after
    left 0
    right 0
    bottom 0
    width 100% 
    height 1px
    transform  scaleY(.5)

.glyphicon 
  top 3px !important
  color #ccc
  cursor pointer

[hidden]
  display none !important

.w-e-text-container 
  height 500px !important

.alert 
  margin-bottom 0

.panel-body 
  padding 0
.panel-info
  color font-modifier-color;
  border 0
  &>.panel-heading
    color font-theme-color;
    background-color bg-theme-color
    border 1px solid bg-theme-color
    &.panel-title
      font-size 18px
      
input[readonly]
  border none
  outline none
  &:hover,
  &:focus
    border none
    outline none
    box-shadow 0 0 0 #000


    
/*base end*/